<h1>Update/Delete <%=@stylist.name() %>'s</h1>

  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="name">Rename the Stylist's name:</label>
    <input id="name" name="name" type="text">

    <button type="submit">Update</button>
  </form>

  <form action="/stylists/<%= @stylist.id() %>" method="post">
     <input name="_method" type="hidden" value="delete">

     <button type="submit">Delete Stylist</button>
   </form>

   <% if @stylist.clients().any?() %>
   <h3>Here are all the clients in this Stylist's list:</h3>

   <ul>
     <% @stylist.clients().each() do |client| %>
     <li> <a href="/clients/<%= client.id() %>"><%= client.name %></li>
     <% end %>
   </ul>

   <% else %>
   <p>There are no clients in this Stylist's list!</p>
   <% end %>
